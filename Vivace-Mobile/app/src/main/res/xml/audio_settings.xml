<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	<ListPreference
		android:title="Time Signature"
		android:key="@string/settings_audio_time_sign"
		android:defaultValue="-1"
		android:entries="@array/time_signatures"
		android:entryValues="@array/time_signature_values"
		android:icon="@drawable/ic_time_sig"
		android:positiveButtonText="@null"
		android:negativeButtonText="@null" />
	
	<cole.matthew.vivace.Fragments.Settings.TempoPickerPreference
		android:title="Tempo"
		android:key="@string/settings_audio_tempo"
		android:defaultValue="120"
		android:icon="@drawable/ic_tempo_marker"
		app:maxTempo="218"
		app:minTempo="40" />
	
	<ListPreference
		android:title="Instrument"
		android:key="@string/settings_audio_instrument"
		android:defaultValue="-1"
		android:entries="@array/instruments"
		android:entryValues="@array/instrument_values"
		android:icon="@drawable/piano"
		android:positiveButtonText="@null"
		android:negativeButtonText="@null" />
	
	<!--Microphone Sensitivity-->
	
</PreferenceScreen>